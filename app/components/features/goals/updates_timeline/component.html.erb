<div class="ps-1.5">
  <%= render UI::Timeline::Component.new do |timeline| %>
    <% progress_changes.each do |progress_change| %>
      <% timeline.with_item(class: "ms-3") do |item| %>
        <% item.with_badge(class: "bg-zinc-100 dark:bg-zinc-600 size-3 -start-1.5 ring-0") %>
        <% item.with_body do %>
          <div class="space-y-1.5">
            <div>
              <%= render UI::Typography::Component.new(as: :p, variant: :subtitle2, class: "leading-none", color: :text_secondary)
                .with_content(localize(progress_change.created_at, format: :long)) %>
            </div>
            <div>
              <div class="flex justify-between">
                <%= link_to profile_goal_path(progress_change.goal.user.username, progress_change.goal) do %>
                  <%= render UI::Typography::Component.new(as: :h2, variant: :h6).with_content(progress_change.goal.title) %>
                <% end %>

                <%= render Goals::ProgressIndicator::Component.new(progress_change:) %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
