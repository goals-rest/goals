<%= tag.div(**attrs) do %>
  <label
    for="dropzone-file"
    class="
      flex flex-col items-center justify-center w-full h-64 border-2
      border-zinc-300/80 border-dashed rounded-lg cursor-pointer hover:bg-zinc-100
      dark:bg-zinc-800 dark:border-zinc-500/80 dark:hover:border-zinc-500
      dark:hover:bg-zinc-900
    "
  >
    <div class="flex flex-col items-center justify-center pt-5 pb-6">
      <%= render UI::Icon::Component.new(
        "cloud-arrow-up",
        class: "w-8 h-8 mb-4 text-zinc-500 dark:text-zinc-400",
      ) %>

      <p class="mb-2 text-sm text-zinc-500 dark:text-zinc-400"><span class="font-semibold"><%= t(".click_to_upload") %></span>
        <%= t(".or_drag_and_drop") %></p>
      <p class="text-xs text-zinc-500 dark:text-zinc-400">
        <%= description %>
      </p>
    </div>
    <%= file_input %>
  </label>
<% end %>
