<%= provide(:title, t(".title")) %>

<div class="dark:bg-zinc-900">
  <div class="md:flex grid flex-wrap md:w-full md:h-[calc(100vh-60px)]">
    <div class="md:w-1/2 flex items-center justify-center p-10 md:order-1 order-2">
      <div class="md:w-[400px] w-full">
        <a class="group inline-block mb-6" href="#"
          <%= link_to root_path, class: "group inline-block mb-6" do %>
            <div class="group-hover:brightness-105 group-hover:scale-95 transform ease-in-out duration-200 transition-transform group-hover:-rotate-2 w-10 h-10 text-primary-500 fill-current">
              <%= render "shared/logo_color_2x" %>
            </div>
          <% end %>

          <h1 class="text-3xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight mb-6"><%= t("layouts.auth.sign_up") %></h1>

          <%= render "form" %>
      </div>

    </div>
    <div class="md:w-1/2 md:order-2 order-1 bg-zinc-900 overflow-hidden">
      <%= image_tag ["themes/shepherd/auth-cabin.jpg", "themes/shepherd/auth-desert.jpg"].sample, class: "object-cover md:h-screen h-[140px] w-full animate-fadeIn" %>
    </div>
  </div>
</div>
